<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/Maroon" />
            <stroke android:width="1dp" android:color="@color/Maroon" />
            <corners android:radius="@dimen/rounded_corner_bootstrap" />
        </shape>
    </item>

    <!-- default-->
    <item>
        <shape>
            <solid android:color="@color/SaddleBrown" />
            <stroke android:width="1dp" android:color="@color/SaddleBrown" />
            <corners android:radius="@dimen/rounded_corner_bootstrap" />
        </shape>
    </item>

</selector>