<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.InventoryCountSummaryActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/inventory_count_summary_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout

            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="1dp">

            <TextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="Pink 6x30 steak Paper Liner"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/vendor_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="22dp"
                android:gravity="bottom"
                android:text="77051359"
                android:textAlignment="textEnd"
                android:textSize="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="105dp"
                android:layout_marginTop="20dp"
                android:gravity="bottom"
                android:text="|"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/item_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="115dp"
                android:layout_marginTop="22dp"
                android:gravity="bottom"
                android:text="10.59"
                android:textAlignment="textEnd"
                android:textSize="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="195dp"
                android:layout_marginTop="20dp"
                android:gravity="bottom"
                android:text="|"
                android:textSize="18dp" />
            <TextView

                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="295dp"
                android:layout_marginTop="22dp"
                android:gravity="bottom"
                android:text="lb"
                android:textAlignment="textEnd"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="205dp"
                android:layout_marginTop="22dp"
                android:gravity="bottom"
                android:text="25"
                android:textAlignment="textEnd"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/unit"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="285dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="bottom"
                android:text="|"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/is_item_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="288dp"
                android:layout_marginTop="22dp"
                android:gravity="bottom"
                android:text="Yes"
                android:textAlignment="textEnd"
                android:textSize="18dp"
                android:visibility="gone"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>