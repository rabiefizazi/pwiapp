<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elrancho.pwi.pwi_app">

    <uses-permission android:name="com.symbol.emdk.permission.EMDK" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <uses-library android:name="com.symbol.emdk" />

        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.SignupActivity"
            android:parentActivityName=".activities.LoginActivity"/>
        <activity
            android:name=".activities.DepartmentActivity"
            android:label="@string/activity_departments" />
        <activity
            android:name=".activities.InventoryCountSummaryActivity"
            android:label="@string/title_activity_inventory_count_summary"
            android:parentActivityName=".activities.DepartmentActivity" />
        <activity
            android:name=".activities.InventoryCountDetailsActivity"
            android:label="@string/title_activity_inventory_count_details"
            android:parentActivityName=".activities.InventoryCountSummaryActivity" />
        <activity android:name=".activities.FrontActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ResetPasswordActivity"
            android:parentActivityName=".activities.LoginActivity"/>
    </application>

</manifest>