<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.InventoryCountSummaryActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/inventory_summary_count_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout

            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvWeekEndDate"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="36dp"
                android:gravity="center"
                android:text="11/03/2018"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/tvInventoryCountSummary"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="216dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="$10,000.00"
                android:textAlignment="textEnd"
                android:textSize="21dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>